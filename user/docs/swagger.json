    "paths": {
        "/users": {
            "get": {
                "description": "obtain information about users from the database",
                "responses": {
                    "200": {
                        "description": "Successful pull of users info",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "_id": {
                                              "type": "string",
                                              "example": "iu7afh47aux9gkjjhkjuysta4"
                                            },
                                            "name": {
                                              "type": "string",
                                              "example": "Mercy Afobite"
                                            },
                                            "email": {
                                              "type": "string",
                                              "example": "regal@gmail.com"
                                            },
                                            "password": {
                                              "type": "string",
                                              "example": "ahjd87d5673b"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
